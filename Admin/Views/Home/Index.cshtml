@using Microsoft.AspNetCore.Identity;
@using ViewModel
@model HomeViewModel
@inject SignInManager<IdentityUser> signInManager
@{
    ViewData["Title"] = "Home Page";
}
<div class="main-container">
    <div class="pd-ltr-20">
        <div class="card-box pd-20 height-100-p mb-30">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <img src="vendors/images/banner-img.png" alt="">
                </div>
                <div class="col-md-8">

                    @if (signInManager.IsSignedIn(User))
                    {
                        <h4 class="font-20 weight-500 mb-10 text-capitalize">
                            Welcome back @User.Identity.Name
                        </h4>
                    }

                    <p class="font-18 max-width-600">A dashboard is a visual display of all of your data. While it can be used in all kinds of different ways, its primary intention is to provide information at-a-glance, such as KPIs. A dashboard usually sits on its own page and receives information from a linked database.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 mb-30">
                <div class="card-box height-100-p widget-style1">
                    <div class="d-flex  align-items-center">
                        <div class="widget-data">
                            <div class="h4 mb-0">Customer Count:</div>
                        </div>
                        <div class="widget-data d-flex">
                            <div class="h4 mb-0 me-2">@Model.CustomersCount</div>
                            <div class="weight-600 font-14">Customer</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 mb-30">
                <div class="card-box height-100-p widget-style1">
                    <div class="d-flex align-items-center">
                        <div class="widget-data">
                            <div class="h4 mb-0">Categories Count:</div>
                        </div>
                        <div class="widget-data d-flex">
                            <div class="h4 mb-0 me-2">@Model.CategoriesCount</div>
                            <div class="weight-600 font-14">Category</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 mb-30">
                <div class="card-box height-100-p widget-style1">
                    <div class="d-flex align-items-center">
                        <div class="widget-data">
                            <div class="h4 mb-0">Products Count:</div>
                        </div>
                        <div class="widget-data d-flex">
                            <div class="h4 mb-0 me-2">@Model.ProductsCount</div>
                            <div class="weight-600 font-14">Product</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 mb-30">
                <div class="card-box height-100-p widget-style1">
                    <div class="d-flex align-items-center">
                        <div class="widget-data">
                            <div class="h4 mb-0">Sellers Count:</div>
                        </div>
                        <div class="widget-data d-flex">
                            <div class="h4 mb-0 me-2">@Model.SellersCount</div>
                            <div class="weight-600 font-14">Seller</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-box mb-30">
            <h2 class="h4 pd-20">Best Selling Products</h2>
            <table class="data-table table nowrap">
                <thead>
                    <tr>
                        <th class="table-plus datatable-nosort">Product</th>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Quantityty</th>
                        <th class="datatable-nosort">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductSamples)
                    {
                        <tr>
                            <td class="table-plus">
                                <img src="@item.Picture" width="70" height="70" alt="">
                            </td>
                            <td>
                                <h5 class="font-16">@item.Name</h5>
                            </td>
                            <td>@item.Brand</td>
                            <td>M</td>
                            <td>@item.Price</td>
                            <td>@item.Stock</td>
                            <td>
                                <div class="dropdown">
                                    <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                        <i class="dw dw-more"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                        <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a>
                                        <a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Edit</a>
                                        <a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="footer-wrap pd-20 mb-20 card-box">
            DeskApp - Bootstrap 4 Admin Template By <a href="https://github.com/dropways" target="_blank">Ankit Hingarajiya</a>
        </div>
    </div>
</div>
