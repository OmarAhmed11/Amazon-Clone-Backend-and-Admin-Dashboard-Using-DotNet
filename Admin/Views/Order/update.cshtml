@{
    ViewData["Title"] = "update";
}
@model Order
<div class="main-container">
    <div class="pd-ltr-20">

        <form class="form-horizontal" action="~/order/update" method="post">
            <h4>Update Order</h4>
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" }, @readonly = "readonly" })
                </div>
                @Html.ValidationMessageFor(i => i.Id)
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.EstimatedDeliveryDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*<input type="date" value="@Model.EstimatedDeliveryDate "/>*@
                    @Html.TextBoxFor(model => model.EstimatedDeliveryDate, new { htmlAttributes = new { @class = "form-control" }, @readonly = "readonly" })
                </div>
                @Html.ValidationMessageFor(i => i.EstimatedDeliveryDate)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CustomerId, new { htmlAttributes = new { @class = "form-control"  }, @readonly = "readonly" })
                </div>
                @Html.ValidationMessageFor(i => i.CustomerId)
            </div>

            <div class="form-group">
                @*<input type="date" value="@Model.OrderDate " />*@
                @Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label col-md-2", @type = "date" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control " },@readonly="readonly"})
                </div>
                @Html.ValidationMessageFor(i => i.OrderDate)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrderAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.OrderAddress, new { htmlAttributes = new { @class = "form-control " }, })
                </div>
                @Html.ValidationMessageFor(i => i.OrderAddress)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.status,Html.GetEnumSelectList(typeof(Status)));
                    @*@Html.TextBoxFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })*@
                </div>
                @Html.ValidationMessageFor(i => i.status)
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </form>

        <div class="footer-wrap pd-20 mb-20 card-box">
            DeskApp - Bootstrap 4 Admin Template By <a href="https://github.com/dropways" target="_blank">Ankit Hingarajiya</a>
        </div>
    </div>
</div>

